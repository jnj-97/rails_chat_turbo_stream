<% content_for :title, "Editing message" %>

<div
  style="
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
  "
>
  <!-- Header -->
  <h1
    style="
      font-size: 2rem;
      font-weight: 700;
      color: #0f2a44;
      margin-bottom: 1.25rem;
    "
  >
    ✈️ Edit Transmission
  </h1>

  <!-- Message form -->
  <%= render "form", message: @message %>

  <!-- Navigation controls -->
  <div
    style="
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    "
  >
    <%= link_to "Show this message", @message,
      style: "
        display: inline-block;
        text-align: center;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        background: linear-gradient(to bottom, #f7fbff, #e8f2fb);
        color: #0f2a44;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid #c6ddf2;
        box-shadow: 0 4px 10px rgba(15, 42, 68, 0.15);
      "
    %>

    <%= link_to "Back to messages", messages_path,
      style: "
        display: inline-block;
        text-align: center;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        background: linear-gradient(to bottom, #f7fbff, #e8f2fb);
        color: #0f2a44;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid #c6ddf2;
        box-shadow: 0 4px 10px rgba(15, 42, 68, 0.15);
      "
    %>
  </div>
</div>
