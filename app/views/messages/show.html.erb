<% content_for :title, "Showing message" %>

<div
  style="
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
  "
>
  <% if notice.present? %>
    <p
      id="notice"
      style="
        display: inline-block;
        padding: 0.6rem 1rem;
        margin-bottom: 1.25rem;
        background: #e6f9ef;
        color: #146c43;
        font-weight: 600;
        border-radius: 999px;
        box-shadow: 0 4px 10px rgba(20, 108, 67, 0.15);
      "
    >
      ✅ <%= notice %>
    </p>
  <% end %>

  <!-- Header -->
  <h1
    style="
      font-size: 2rem;
      font-weight: 700;
      color: #0f2a44;
      margin-bottom: 1.25rem;
    "
  >
    ✈️ Transmission Details
  </h1>

  <!-- Message content -->
  <%= render @message %>

  <!-- Controls -->
  <div
    style="
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    "
  >
    <%= link_to "Edit this message", edit_message_path(@message),
      style: "
        display: inline-block;
        text-align: center;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        background: linear-gradient(to bottom, #f7fbff, #e8f2fb);
        color: #0f2a44;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid #c6ddf2;
        box-shadow: 0 4px 10px rgba(15, 42, 68, 0.15);
      "
    %>

    <%= link_to "Back to messages", messages_path,
      style: "
        display: inline-block;
        text-align: center;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        background: linear-gradient(to bottom, #f7fbff, #e8f2fb);
        color: #0f2a44;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid #c6ddf2;
        box-shadow: 0 4px 10px rgba(15, 42, 68, 0.15);
      "
    %>

    <%= button_to "Destroy this message", @message,
      method: :delete,
      data: { turbo_confirm: "Are you sure?" },
      style: "
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        background: linear-gradient(to right, #e5533d, #ff6b5c);
        color: white;
        font-weight: 600;
        border: none;
        cursor: pointer;
        box-shadow: 0 6px 16px rgba(229, 83, 61, 0.35);
      "
    %>
  </div>
</div>
